# Generated by tmake at 01:03, 2008/09/19
#     Project: example
#    Template: app
#############################################################################

####### Compiler, tools and options

CC	=	gcc
CXX	=	g++
CFLAGS	=	-pipe -Wall -W -O2 -DNO_DEBUG
CXXFLAGS=	-pipe -DQWS -fno-exceptions -fno-rtti -Wall -W -O2 -DNO_DEBUG
INCPATH	=	-I$(QPEDIR)/include -I$(QTDIR)/include
LINK	=	g++
LFLAGS	=	
LIBS	=	$(SUBLIBS) -L$(QTDIR)/lib -lqpe -lqte
MOC	=	$(QTDIR)/bin/moc
UIC	=	$(QTDIR)/bin/uic

TAR	=	tar -cf
GZIP	=	gzip -9f

####### Files

HEADERS =	example.h
SOURCES =	main.cpp \
		example.cpp
OBJECTS =	main.o \
		example.o \
		examplebase.o
INTERFACES =	examplebase.ui
UICDECLS =	examplebase.h
UICIMPLS =	examplebase.cpp
SRCMOC	=	moc_example.cpp \
		moc_examplebase.cpp
OBJMOC	=	moc_example.o \
		moc_examplebase.o
DIST	=	
TARGET	=	example
INTERFACE_DECL_PATH = .

####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules


all: $(TARGET)

$(TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

tmake: Makefile

Makefile: example.pro
	tmake example.pro -o Makefile

dist:
	$(TAR) example.tar example.pro $(SOURCES) $(HEADERS) $(INTERFACES) $(DIST)
	$(GZIP) example.tar

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(UICIMPLS) $(UICDECLS) $(TARGET)
	-rm -f *~ core

####### Sub-libraries


###### Combined headers


####### Compile

main.o: main.cpp \
		example.h \
		examplebase.h

example.o: example.cpp \
		example.h \
		examplebase.h

examplebase.h: examplebase.ui
	$(UIC) examplebase.ui -o $(INTERFACE_DECL_PATH)/examplebase.h

examplebase.cpp: examplebase.ui
	$(UIC) examplebase.ui -i examplebase.h -o examplebase.cpp

examplebase.o: examplebase.cpp \
		examplebase.h \
		examplebase.ui

moc_example.o: moc_example.cpp \
		example.h \
		examplebase.h

moc_examplebase.o: moc_examplebase.cpp \
		examplebase.h

moc_example.cpp: example.h
	$(MOC) example.h -o moc_example.cpp

moc_examplebase.cpp: examplebase.h
	$(MOC) examplebase.h -o moc_examplebase.cpp

